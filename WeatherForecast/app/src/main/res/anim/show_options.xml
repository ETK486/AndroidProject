<set xmlns:android="http://schemas.android.com/apk/res/android">
    <scale
        android:duration="300"
        android:fromXScale="0"
        android:fromYScale="0"
        android:toXScale="1"
        android:toYScale="1"
        android:pivotX="50%"
        android:pivotY="50%"
        android:interpolator="@android:interpolator/overshoot" />
    <alpha
        android:duration="300"
        android:fromAlpha="0"
        android:toAlpha="1" />
</set>
